<?xml version="1.0" encoding="utf-8"?>
<com.skplanet.skpad.benefit.presentation.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nativeAdContainerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/skpad_space_16">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                <ImageView
                    android:id="@+id/mediaViewPlaceHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/skpad_ic_placeholder"
                    android:visibility="gone"/>

                <com.skplanet.skpad.benefit.presentation.media.MediaView
                    android:id="@+id/mediaView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.skplanet.skpad.benefit.presentation.guide.AdInfoView
                        android:id="@+id/information"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        />
                </FrameLayout>


            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/skpad_space_4"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textTitle"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/skpad_text_base"
                        android:textAppearance="@style/skpad_h5_bold" />

                    <LinearLayout
                        android:id="@+id/sponsoredLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/skpad_space_4"
                android:textColor="@color/skpad_text_base"
                android:textAppearance="@style/skpad_h6" />

            <com.skplanet.skpad.benefit.presentation.media.CtaView
                android:id="@+id/ctaView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="12dp"
                android:layout_marginRight="4dp"
                android:minHeight="40dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</com.skplanet.skpad.benefit.presentation.nativead.NativeAdView>
